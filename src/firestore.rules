
/**
 * @fileoverview Firestore Security Rules for SanteConnect.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data
 * and restricts administrative functions to authorized admins.
 * Admin privileges are determined by the existence of a document in the `/roles_admin/{userId}` collection.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles.
     */
    match /users/{userId} {
      allow get, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn(); // Any signed-in user can create their own user document.
      allow list: if isAdmin(); // Only admins can list users.

      /**
       * @description Secure user-specific subcollections.
       * The user can read and write any document in their own subcollections.
       */
      match /profiles/{profileId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      match /appointments/{appointmentId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      match /emergencyContacts/{contactId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      match /medications/{medicationId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      match /prescriptions/{prescriptionId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      match /vaccines/{vaccineId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }


    /**
     * @description Publicly readable collections, manageable by admins.
     */
    match /medicalProfessionals/{medicalProfessionalId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    match /holisticContent/{holisticContentId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Admin role management.
     */
    match /roles_admin/{userId} {
      allow get: if true;
      // Allow any signed-in user to make themselves an admin for demo purposes.
      // In production, this should be restricted.
      allow create: if isSignedIn() && isOwner(userId); 
      allow list, update, delete: if isAdmin();
    }
    
    /**
     * @description Forum rules.
     */
    match /forumThreads/{threadId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update: if false; 
        allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid;

        match /posts/{postId} {
            allow read, write: if isSignedIn();
        }
    }

    /**
     * @description SOS alerts are write-only for clients.
     */
    match /sosAlerts/{alertId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read, list, update, delete: if false;
    }


    // Helper functions

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}
