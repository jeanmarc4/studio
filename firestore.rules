
/**
 * @fileoverview Firestore Security Rules for SanteConnect.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data
 * (users, appointments, emergency contacts, medications) and restricts administrative
 * functions to a hardcoded list of authorized super-admins.
 *
 * Data Structure:
 * - /users/{userId}: User profile data, accessible only to the owning user.
 * - /users/{userId}/profiles/{profileId}: Family profiles linked to the user, accessible only to that user.
 * - /users/{userId}/appointments/{appointmentId}: Appointments for a specific user, accessible only to that user.
 * - /users/{userId}/emergencyContacts/{contactId}: Emergency contacts for a specific user, accessible only to that user.
 * - /users/{userId}/medications/{medicationId}: Medications for a specific user, accessible only to that user.
 * - /users/{userId}/prescriptions/{prescriptionId}: Prescriptions for a specific user, accessible only to that user.
 * - /users/{userId}/vaccines/{vaccineId}: Vaccine records for a specific user, accessible only to that user.
 * - /users/{userId}/cartesVitale/{carteId}: Carte Vitale info, accessible only by owner.
 * - /users/{userId}/mutuelles/{mutuelleId}: Mutuelle info, accessible only by owner.
 * - /medicalProfessionals/{medicalProfessionalId}: Medical professional profiles, manageable only by admins.
 * - /holisticContent/{holisticContentId}: Holistic wellness content, manageable only by admins.
 * - /roles_admin/{userId}: This collection is now effectively deprecated by hardcoded rules, but rules are kept for safety.
 * - /forumThreads/{threadId}: Publicly readable forum threads. Authenticated users can create/delete their own.
 * - /forumThreads/{threadId}/posts/{postId}: Publicly readable replies. Authenticated users can create/delete their own.
 * - /sosAlerts/{alertId}: SOS alerts triggered by users.
 *
 * Key Security Decisions:
 * - Admin privileges are hardcoded to specific User IDs (UIDs) for maximum security.
 * - The ability for users (even admins) to grant admin rights via the app is removed.
 * - User data is strictly private; listing all users is disallowed for non-admins.
 * - Data shape validation is relaxed to allow for rapid prototyping. Only critical authorization fields are validated.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the authenticated user can access their own profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      allow list: if isAdmin();
      allow delete: if isAdmin();

      /**
       * @description Secure family profiles. Only the parent user can manage their family profiles.
       * @path /users/{userId}/profiles/{profileId}
       */
      match /profiles/{profileId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      /**
       * @description Secure appointments for a specific user. Only the user can manage their appointments.
       * @path /users/{userId}/appointments/{appointmentId}
       */
      match /appointments/{appointmentId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      /**
       * @description Secure emergency contacts for a specific user. Only the user can manage their contacts.
       * @path /users/{userId}/emergencyContacts/{contactId}
       */
      match /emergencyContacts/{contactId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      /**
       * @description Secure medications for a specific user. Only the user can manage their medication schedule.
       * @path /users/{userId}/medications/{medicationId}
       */
      match /medications/{medicationId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

       /**
       * @description Secure prescriptions for a specific user. Only the user can manage their prescriptions.
       * @path /users/{userId}/prescriptions/{prescriptionId}
       */
      match /prescriptions/{prescriptionId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      /**
       * @description Secure vaccine records for a specific user. Only the user can manage their records.
       * @path /users/{userId}/vaccines/{vaccineId}
       */
      match /vaccines/{vaccineId} {
          allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      /**
       * @description Secure Carte Vitale records. Only the user can manage their card.
       * @path /users/{userId}/cartesVitale/{carteId}
       */
      match /cartesVitale/{carteId} {
          allow read, write: if isSignedIn() && isOwner(userId);
      }

      /**
       * @description Secure mutuelle records. Only the user can manage their cards.
       * @path /users/{userId}/mutuelles/{mutuelleId}
       */
      match /mutuelles/{mutuelleId} {
          allow read, write: if isSignedIn() && isOwner(userId);
      }
    }


    /**
     * @description Secure medical professional profiles. Only admins can create, update, or delete them.
     * @path /medicalProfessionals/{medicalProfessionalId}
     */
    match /medicalProfessionals/{medicalProfessionalId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Secure holistic wellness content. Only admins can create, update, or delete content.
     * @path /holisticContent/{holisticContentId}
     */
    match /holisticContent/{holisticContentId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Secure admin role assignments. Writing to this collection is now disabled for clients.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list, write: if false; // All modifications must be done via hardcoded rules or backend.
    }
    
    /**
     * @description Secure forum threads. Any authenticated user can create a thread.
     * @path /forumThreads/{threadId}
     */
    match /forumThreads/{threadId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update: if false; 
        allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());

        /**
         * @description Secure forum posts/replies. Any authenticated user can create a post.
         * @path /forumThreads/{threadId}/posts/{postId}
         */
        match /posts/{postId} {
            allow read: if true;
            allow write: if isSignedIn();
            allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
        }
    }

    /**
     * @description Secure SOS alerts.
     * @path /sosAlerts/{alertId}
     */
    match /sosAlerts/{alertId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read, list, update, delete: if false; // Alerts are write-only for clients. They should be processed by a backend service.
    }


    // Helper functions

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document based on the user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user has admin privileges by comparing their UID against a hardcoded list.
     * This is the single source of truth for admin status.
     */
    function isAdmin() {
      let adminUIDs = [
          "k8pesCgwu5ewpR4S7IV36k3RG6w2",      // UID for diojm93@gmail.com
          "gLoqR1BkL4UleNRQSVOR2yeHcp13" // UID for lucemouche3@gmail.com
      ];
      return isSignedIn() && request.auth.uid in adminUIDs;
    }
  }
}
